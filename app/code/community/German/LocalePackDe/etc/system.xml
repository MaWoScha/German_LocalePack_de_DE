<config>
	<tabs>
		<localepacks translate="label" module="localepackde">
			<label>Locale Packs</label>
			<sort_order>150</sort_order>
		</localepacks>
	</tabs>
	<sections>
		<localepackde module="localepackde">
			<label>Locale de_DE</label>
			<tab>localepacks</tab>
			<sort_order>20</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>0</show_in_website>
			<show_in_store>0</show_in_store>
			<groups>
				<maininfo translate="label" module="localepackde">
					<label>German language package de_DE - Community Edition (CE)</label>
					<frontend_type>text</frontend_type>
                    <frontend_model>localepackde/system_config_form_fieldset_instructions</frontend_model>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
				</maininfo>

				<mcm translate="label" module="localepackde">
					<label>Translate Magento Connect Manager</label>
					<frontend_type>text</frontend_type>
                    <frontend_model>localepackde/system_config_form_fieldset_magentoconnectmanager</frontend_model>
					<sort_order>20</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
				</mcm>

				<tipps_translation translate="label" module="localepackde">
					<label>Using your own translations</label>
					<frontend_type>text</frontend_type>
					<sort_order>50</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<comment>More Infos here soon!</comment>
				</tipps_translation>

				<additional_extensions translate="label" module="localepackde">
					<label>Recommended extensions</label>
					<frontend_type>text</frontend_type>
                    <frontend_model>localepackde/system_config_form_fieldset_extensions</frontend_model>
					<sort_order>60</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
				</additional_extensions>

				<tinymce_language translate="label" module="localepackde">
					<label>Translate TinyMCE</label>
					<sort_order>70</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<enabled translate="label">
							<label>Enabled</label>
							<comment>Use German language for TinyMCE Editor?</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_enabledisable</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</enabled>
					</fields>
				</tinymce_language>
			</groups>
		</localepackde>
	</sections>
</config>